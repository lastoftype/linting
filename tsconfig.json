{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2018",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "include": ["**/*.ts*"],
  "exclude": ["node_modules"]
}
